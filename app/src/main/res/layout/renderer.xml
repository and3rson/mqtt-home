<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="2sp"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/rendererRoot"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="2sp"
        android:theme="@style/Theme.Home.TextRenderer">

        <LinearLayout
            android:id="@+id/rendererTitleContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/rendererTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/title" />

            <Space
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/rendererPin"
                android:layout_width="16sp"
                android:layout_height="16sp"
                android:layout_marginTop="4sp"
                android:layout_marginRight="4sp"
                android:background="@drawable/pin" />

            <ImageButton
                android:id="@+id/rendererMoreButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#00000000"
                app:srcCompat="@drawable/ic_more" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/rendererContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" />

        <TextView
            android:id="@+id/rendererLastUpdate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/empty"
            android:textSize="10sp" />
    </LinearLayout>

</LinearLayout>